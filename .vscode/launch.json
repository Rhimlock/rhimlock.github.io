  {
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch index.html",
            "type": "firefox",
            "request": "launch",
            "preLaunchTask": "build",
            "reAttach": true,
            "url": "http://localhost:5500/"
        },
      {
        "name": "Launch Chrome ",
        "type": "chrome",
        "request": "launch",
        "preLaunchTask": "build",
        "url": "http://localhost:5500/",
        "sourceMaps": true,
        "webRoot": "${workspaceRoot}",
        "runtimeArgs": [
          "--remote-debugging-port=9222"
        ]
      }
    ]
  }